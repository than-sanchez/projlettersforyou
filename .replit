modules = ["nodejs-20", "web", "php-8.4"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Dev Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "PHP API Server"

[[workflows.workflow]]
name = "Dev Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "PHP API Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "php -S localhost:8080 -t api"
waitForPort = 8080

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8080
externalPort = 8080
exposeLocalhost = true

[[ports]]
localPort = 46753
externalPort = 3000

[deployment]
deploymentTarget = "vm"
run = ["bash", "-c", "php -S localhost:8080 -t api & npx vite preview --host 0.0.0.0 --port 5000"]
build = ["npm", "run", "build"]
